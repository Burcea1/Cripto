@*@model CRYPTO_Burcea.DAL.Tranzactionare*@

@using (Html.BeginForm("Adauga", "Tranzactionare", FormMethod.Get))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Alegeți portofelul unde doriți să adăugați moneda cumpărată</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <input type="hidden" name="tipT" value="Cumparare" />

        <div class="form-group">
            @Html.Label("Portofel", "Portofel", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idCPortofel", new SelectList(ViewBag.Lista, "Value", "Text"), "Selectati portofelul ", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessage("idCPortofel", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tranzacționare" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Închide", "Index", "Moneda", null, new { @class = "btn btn-primary"})
</div>
