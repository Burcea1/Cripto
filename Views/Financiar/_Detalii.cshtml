
<script src="~/Scripts/jquery-3.4.1.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js" type="text/javascript"></script>

<p>
    @Ajax.ActionLink("Afișează vânzări", "Vanzari", "Financiar", new { idMoneda = ViewBag.idMoneda},
                    new AjaxOptions()
                    {
                        HttpMethod = "GET",
                        UpdateTargetId = "divRezultat",
                        InsertionMode = InsertionMode.Replace
                    }, new { @class = "btn btn-primary" }
    )
    <span> </span>
    @Ajax.ActionLink("Afișează cumpărări", "Cumparari", "Financiar", new { idMoneda = ViewBag.idMoneda },
                    new AjaxOptions()
                    {
                        HttpMethod = "GET",
                        UpdateTargetId = "divRezultat",
                        InsertionMode = InsertionMode.Replace
                    }, new { @class = "btn btn-primary" }
    )
</p>

<hr />


<div id="divRezultat">
    @{
        Html.RenderAction("Vanzari", "Financiar", new { idMoneda = ViewBag.idMoneda});
    }
</div>
