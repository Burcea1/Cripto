

@{
    ViewBag.Title = "Istoric tranzactii";
}

<script src="~/Scripts/jquery-3.4.1.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js" type="text/javascript"></script>

<h2>Istoricul tranzacțiilor</h2>

<hr />
<br />

<p>
    @Ajax.ActionLink("Afișează istoric operațiuni", "IstoricAR", "Tranzactii",
                    new AjaxOptions()
                    {
                        HttpMethod = "GET",
                        UpdateTargetId = "divTranzactii",
                        InsertionMode = InsertionMode.Replace
                    }, new { @class = "btn btn-primary" }
    )
    <span> </span>
    @Ajax.ActionLink("Afișează istoric transferuri", "IstoricTransferuri", "Tranzactii",
                    new AjaxOptions()
                    {
                        HttpMethod = "GET",
                        UpdateTargetId = "divTranzactii",
                        InsertionMode = InsertionMode.Replace
                    }, new { @class = "btn btn-primary" }
    )
    <span> </span>
    @Ajax.ActionLink("Afișează istoric tranzacționări", "IstoricTranzactionari", "Tranzactii",
                    new AjaxOptions()
                    {
                        HttpMethod = "GET",
                        UpdateTargetId = "divTranzactii",
                        InsertionMode = InsertionMode.Replace
                    }, new { @class = "btn btn-primary" }
    )
</p>

<hr />

<div id="divTranzactii">
    @{
        Html.RenderAction("IstoricAR", "Tranzactii");
    }
</div>


